mixin storeForm(store = {})

  form(action=`/add/${store._id || ''}` method="POST"  class="storecard" enctype="multipart/form-data")
    label(for="name") Name
    input(type="text" name="name" value=store.name)
    label(for="description") Description
    textarea(placeholder="type ur description" name="description")= store.description
    label(for="photo") Photo 
      input(type="file" name="photo" id="photo" accept="image/gif, image/png, image/jpeg")
      if store.photo 
        img(src=`/uploads/${store.photo}`, alt=store.name width=200) 
    - const choices = ['english music', 'amharic music', 'tigrinia music', 'bilen music']
    - const tags = store.tags || []
    ul.tags
      each choice in choices
        .tag.music-choice
          input(type="checkbox" id=choice value=choice name="tags" checked=(tags.includes(choice)))
          label(for="choice") #{choice}
    input(type="submit" value="Save --<" class="button")
        
